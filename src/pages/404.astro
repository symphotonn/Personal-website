---
import Base from '../layouts/Base.astro';
import Button from '../components/Button.astro';
---

<Base title="Page Not Found — LYP">
  <div class="container">
    <div class="not-found">
      <h1>404</h1>
      <p class="text-muted">This page doesn't exist — perhaps it was never meant to.</p>
      <Button href="/">Return home</Button>
    </div>
  </div>
</Base>

<style>
  .not-found {
    text-align: center;
    padding: var(--space-3xl) 0;
    max-width: 400px;
    margin: 0 auto;
  }

  h1 {
    font-size: 6rem;
    color: var(--color-accent);
    margin-bottom: var(--space-md);
    line-height: 1;
  }

  p {
    margin-bottom: var(--space-xl);
  }
</style>
