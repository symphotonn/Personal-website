---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

// Get all projects
const allProjects = await getCollection('projects');

// Sort: featured first, then by status (active > completed > planned > archived)
const statusOrder = { active: 0, completed: 1, planned: 2, archived: 3 };
const sortedProjects = allProjects.sort((a, b) => {
  // Featured first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  // Then by status
  return statusOrder[a.data.status] - statusOrder[b.data.status];
});

const statusLabels: Record<string, string> = {
  active: 'Active',
  completed: 'Completed',
  planned: 'Planned',
  archived: 'Archived',
};

const statusColors: Record<string, string> = {
  active: 'status-active',
  completed: 'status-completed',
  planned: 'status-planned',
  archived: 'status-archived',
};
---

<Base title="Projects â€” LYP" description="Open-source tools and projects focused on freedom technology.">
  <div class="container">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="text-muted">
        Open-source tools and experiments in freedom technology.
        Everything here is built with sovereignty in mind.
      </p>
    </header>

    {sortedProjects.length > 0 ? (
      <div class="projects-grid">
        {sortedProjects.map(project => (
          <article class="project-card">
            <div class="project-header">
              <h2>{project.data.name}</h2>
              <span class={`status ${statusColors[project.data.status]}`}>
                {statusLabels[project.data.status]}
              </span>
            </div>
            <p class="project-description text-muted">{project.data.description}</p>
            {project.data.tags && project.data.tags.length > 0 && (
              <div class="project-tags">
                {project.data.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
            <div class="project-links">
              {project.data.url && (
                <a href={project.data.url} target="_blank" rel="noopener noreferrer">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                  Live
                </a>
              )}
              {project.data.github && (
                <a href={project.data.github} target="_blank" rel="noopener noreferrer">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Source
                </a>
              )}
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p class="text-muted">Projects coming soon. Check back later!</p>
      </div>
    )}
  </div>
</Base>

<style>
  .page-header {
    margin-bottom: var(--space-2xl);
    max-width: var(--max-width);
  }

  .page-header h1 {
    margin-bottom: var(--space-sm);
  }

  .page-header p {
    font-size: 1.125rem;
    margin-bottom: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-md);
  }

  .project-card {
    padding: var(--space-lg);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: border-color var(--transition-fast);
  }

  .project-card:hover {
    border-color: var(--color-accent);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .project-header h2 {
    font-size: 1.125rem;
    margin-bottom: 0;
  }

  .status {
    font-size: 0.75rem;
    font-weight: 500;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    white-space: nowrap;
  }

  .status-active {
    background-color: #dcfce7;
    color: #166534;
  }

  :global([data-theme="dark"]) .status-active {
    background-color: #14532d;
    color: #86efac;
  }

  .status-completed {
    background-color: #dbeafe;
    color: #1e40af;
  }

  :global([data-theme="dark"]) .status-completed {
    background-color: #1e3a5f;
    color: #93c5fd;
  }

  .status-planned {
    background-color: #fef3c7;
    color: #92400e;
  }

  :global([data-theme="dark"]) .status-planned {
    background-color: #451a03;
    color: #fcd34d;
  }

  .status-archived {
    background-color: #f3f4f6;
    color: #4b5563;
  }

  :global([data-theme="dark"]) .status-archived {
    background-color: #374151;
    color: #9ca3af;
  }

  .project-description {
    font-size: 0.9375rem;
    margin-bottom: var(--space-md);
    line-height: 1.6;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .tag {
    font-size: 0.75rem;
    padding: 2px var(--space-sm);
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-muted);
  }

  .project-links {
    display: flex;
    gap: var(--space-md);
  }

  .project-links a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent);
  }

  .project-links a:hover {
    color: var(--color-accent-hover);
  }

  .empty-state {
    padding: var(--space-3xl);
    text-align: center;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .empty-state p {
    margin-bottom: 0;
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
