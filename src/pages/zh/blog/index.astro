---
import Base from '../../../layouts/Base.astro';
import BlogCard from '../../../components/BlogCard.astro';
import { getCollection } from 'astro:content';
import { calculateReadingTime, formatReadingTime } from '../../../utils/readingTime';

const lang = 'zh';

// Get all non-draft blog posts, sorted by date
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Base title="博客 — LYP" description="关于自由技术、隐私和数字主权的文章。">
  <div class="container">
    <header class="blog-header">
      <h1>博客</h1>
      <p class="blog-header-description text-muted">
        关于自由技术、隐私、所有权和构建个人主权工具的思考。
      </p>
    </header>

    {sortedPosts.length > 0 ? (
      <div class="blog-list">
        {sortedPosts.map(post => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            slug={post.slug}
            tags={post.data.tags}
            readingTime={formatReadingTime(calculateReadingTime(post.body, lang), lang)}
            lang={lang}
          />
        ))}
      </div>
    ) : (
      <div class="blog-empty">
        <p class="text-muted">暂无文章。请稍后再来！</p>
      </div>
    )}
  </div>
</Base>

<style>
  .blog-header {
    margin-bottom: var(--space-2xl);
    max-width: var(--max-width);
  }

  .blog-header h1 {
    margin-bottom: var(--space-sm);
  }

  .blog-header-description {
    font-size: 1.125rem;
    margin-bottom: 0;
  }

  .blog-list {
    display: grid;
    gap: var(--space-md);
    max-width: var(--max-width);
  }

  .blog-empty {
    padding: var(--space-3xl);
    text-align: center;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  .blog-empty p {
    margin-bottom: 0;
  }
</style>
