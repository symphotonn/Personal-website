---
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
  lang?: 'en' | 'zh';
}

const { headings, lang = 'en' } = Astro.props;

// Filter to only show h2 and h3 headings
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);

const tocTitle = lang === 'zh' ? '目录' : 'Contents';
---

{tocHeadings.length > 0 && (
  <>
    {/* Desktop: Sidebar TOC */}
    <aside class="toc-sidebar" aria-label={tocTitle}>
      <div class="toc-sidebar-edge">
        <span class="toc-sidebar-indicator">≡</span>
      </div>
      <nav class="toc-sidebar-panel">
        <h2 class="toc-title">{tocTitle}</h2>
        <ul class="toc-list">
          {tocHeadings.map(heading => (
            <li class={`toc-item toc-item-${heading.depth}`}>
              <a href={`#${heading.slug}`} class="toc-link" data-toc-link={heading.slug}>
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </aside>

    {/* Mobile: Inline TOC */}
    <nav class="toc-inline" aria-label={tocTitle}>
      <h2 class="toc-title">{tocTitle}</h2>
      <ul class="toc-list">
        {tocHeadings.map(heading => (
          <li class={`toc-item toc-item-${heading.depth}`}>
            <a href={`#${heading.slug}`} class="toc-link" data-toc-link={heading.slug}>
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </>
)}

<script>
  function initTOC() {
    const tocSidebar = document.querySelector('.toc-sidebar') as HTMLElement;
    const tocLinks = document.querySelectorAll('[data-toc-link]');

    if (!tocSidebar || tocLinks.length === 0) return;

    // --- Show/hide sidebar based on scroll position ---
    const SCROLL_THRESHOLD = 200;
    let sidebarVisible = false;

    function updateSidebarVisibility() {
      const shouldShow = window.scrollY > SCROLL_THRESHOLD;

      if (shouldShow !== sidebarVisible) {
        sidebarVisible = shouldShow;
        if (shouldShow) {
          tocSidebar.classList.add('toc-sidebar-visible');
        } else {
          tocSidebar.classList.remove('toc-sidebar-visible');
        }
      }
    }

    window.addEventListener('scroll', updateSidebarVisibility, { passive: true });
    updateSidebarVisibility(); // Check initial state

    // --- Scroll-spy: highlight active section ---
    const headingIds = Array.from(tocLinks).map(link => link.getAttribute('data-toc-link'));
    const headings = headingIds
      .map(id => document.getElementById(id!))
      .filter((el): el is HTMLElement => el !== null);

    if (headings.length === 0) return;

    let currentActiveId: string | null = null;

    const observer = new IntersectionObserver(
      (entries) => {
        const visibleEntries = entries.filter(entry => entry.isIntersecting);

        if (visibleEntries.length > 0) {
          const topEntry = visibleEntries.reduce((top, entry) => {
            return entry.boundingClientRect.top < top.boundingClientRect.top ? entry : top;
          });

          const newActiveId = topEntry.target.id;
          if (newActiveId !== currentActiveId) {
            currentActiveId = newActiveId;
            updateActiveLink(newActiveId);
          }
        }
      },
      {
        rootMargin: '-80px 0px -70% 0px',
        threshold: 0
      }
    );

    headings.forEach(heading => observer.observe(heading));

    function updateActiveLink(activeId: string) {
      tocLinks.forEach(link => {
        const linkId = link.getAttribute('data-toc-link');
        if (linkId === activeId) {
          link.classList.add('toc-link-active');
        } else {
          link.classList.remove('toc-link-active');
        }
      });
    }
  }

  // Initialize on page load and after navigation
  initTOC();
  document.addEventListener('astro:page-load', initTOC);
</script>

<style>
  /* ===================
     Desktop Sidebar TOC
     =================== */
  .toc-sidebar {
    display: none;
  }

  @media (min-width: 1200px) {
    .toc-sidebar {
      display: block;
      position: fixed;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      z-index: 100;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }

    .toc-sidebar.toc-sidebar-visible {
      opacity: 1;
      pointer-events: auto;
    }

    .toc-sidebar-edge {
      position: absolute;
      right: 0;
      top: 0;
      width: 28px;
      height: 100%;
      min-height: 56px;
      background-color: var(--color-surface);
      border: 1px solid var(--color-border);
      border-right: none;
      border-radius: var(--radius-md) 0 0 var(--radius-md);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: opacity var(--transition-fast);
    }

    .toc-sidebar-indicator {
      font-size: 1.125rem;
      color: var(--color-muted);
      writing-mode: vertical-rl;
      text-orientation: mixed;
    }

    .toc-sidebar-panel {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 260px;
      max-height: 70vh;
      overflow-y: auto;
      padding: var(--space-lg);
      background-color: var(--color-surface);
      border: 1px solid var(--color-border);
      border-right: none;
      border-radius: var(--radius-md) 0 0 var(--radius-md);
      box-shadow: -4px 0 12px rgba(0, 0, 0, 0.1);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-50%) translateX(100%);
      transition: all var(--transition-base);
    }

    .toc-sidebar:hover .toc-sidebar-edge {
      opacity: 0;
    }

    .toc-sidebar:hover .toc-sidebar-panel {
      opacity: 1;
      visibility: visible;
      transform: translateY(-50%) translateX(0);
    }
  }

  /* ===================
     Mobile Inline TOC
     =================== */
  .toc-inline {
    display: block;
    margin-bottom: var(--space-2xl);
    padding: var(--space-lg);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
  }

  @media (min-width: 1200px) {
    .toc-inline {
      display: none;
    }
  }

  /* ===================
     Shared TOC Styles
     =================== */
  .toc-title {
    font-size: 0.75rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-muted);
    margin-bottom: var(--space-md);
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: var(--space-xs);
  }

  .toc-item-2 {
    padding-left: 0;
  }

  .toc-item-3 {
    padding-left: var(--space-md);
  }

  .toc-link {
    display: block;
    font-size: 0.875rem;
    line-height: 1.4;
    color: var(--color-text);
    text-decoration: none;
    padding: var(--space-xs) 0;
    border-left: 2px solid transparent;
    padding-left: var(--space-sm);
    transition: all var(--transition-fast);
  }

  .toc-link:hover {
    color: var(--color-accent);
    border-left-color: var(--color-accent);
  }

  /* Active state for scroll-spy */
  .toc-link-active {
    color: var(--color-accent);
    border-left-color: var(--color-accent);
    font-weight: var(--font-weight-medium);
  }

  .toc-item-3 .toc-link {
    font-size: 0.8125rem;
    color: var(--color-muted);
  }

  .toc-item-3 .toc-link:hover,
  .toc-item-3 .toc-link-active {
    color: var(--color-accent);
  }

  /* Scrollbar styling for sidebar panel */
  .toc-sidebar-panel::-webkit-scrollbar {
    width: 4px;
  }

  .toc-sidebar-panel::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc-sidebar-panel::-webkit-scrollbar-thumb {
    background-color: var(--color-border);
    border-radius: 2px;
  }

  /* Dark mode shadow adjustment */
  :global([data-theme="dark"]) .toc-sidebar-panel {
    box-shadow: -4px 0 12px rgba(0, 0, 0, 0.3);
  }
</style>
